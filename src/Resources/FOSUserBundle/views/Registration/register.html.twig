{% extends '@FOSUser/layout.html.twig' %}

{% block fos_user_content %}
    <section class="login-page pt170">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-12 col-xs-12">
                    <h3>Sign Up</h3>
                    {% trans_default_domain 'FOSUserBundle' %}

                    <style>
                        .registration-form .control-label ul {
                            list-style: none;
                        }
                    </style>

                    <div class="mt10">
                        <a class="btn btn-block mt30 color-white color-white plr50 ptb19 btn-social btn-facebook" href="{{ url("hwi_oauth_service_redirect", {service: "facebook"}) }}">
                            <span class="fa fa-facebook"></span> Sign in with Facebook
                        </a>
                    </div>

                    <hr />

                    <div class="mt30">
                        {{ form_start(form, { 'attr': { 'class': 'registration-form'}}) }}

                            {{ form_widget(form._token) }}

                            <div class="form-group {% if not form.email.vars.valid %}has-error{% endif %}">
                                {% if not form.email.vars.valid %}
                                    <label class="control-label">{{ form_errors(form.email) }}</label>
                                {% endif %}
                                <div class="input-wrap input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                    {{
                                        form_widget(form.email, {
                                            'attr': {
                                                'class': 'general_input italic',
                                                'placeholder': 'Email'
                                            }
                                        })
                                    }}
                                </div>
                            </div>

                        <div class="form-group  {% if not form.username.vars.valid %}has-error{% endif %}">
                            {% if not form.username.vars.valid %}
                                <label class="control-label">{{ form_errors(form.email) }}</label>
                            {% endif %}
                            <label class="control-label">{{ form_errors(form.username) }}</label>
                            <div class="input-wrap input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                {{
                                    form_widget(form.username, {
                                        'attr': {
                                            'class': 'general_input italic',
                                            'placeholder': 'Username'
                                        }
                                    })
                                }}
                            </div>
                        </div>

                        <div class="form-group  {% if not form.plainPassword.first.vars.valid %}has-error{% endif %}">
                            {% if not form.plainPassword.first.vars.valid %}
                                <label class="control-label">{{ form_errors(form.email) }}</label>
                            {% endif %}
                            <label class="control-label">{{ form_errors(form.plainPassword.first) }}</label>
                            <div class="input-wrap input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                {{
                                    form_widget(form.plainPassword.first, {
                                        'attr': {
                                            'class': 'general_input italic',
                                            'placeholder': 'Password'
                                        }
                                    })
                                }}
                            </div>
                        </div>

                        <div class="form-group {% if not form.plainPassword.second.vars.valid %}has-error{% endif %}">
                            {% if not form.plainPassword.second.vars.valid %}
                                <label class="control-label">{{ form_errors(form.email) }}</label>
                            {% endif %}
                            <label class="control-label">{{ form_errors(form.plainPassword.second) }}</label>
                            <div class="input-wrap input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                {{
                                    form_widget(form.plainPassword.second, {
                                        'attr': {
                                            'class': 'general_input italic',
                                            'placeholder': 'Confirm Password'
                                        }
                                    })
                                }}
                            </div>
                        </div>

                            <input class="btn btn-block gradient mt30 color-white color-white plr50 ptb19" type="submit" value="{{ 'registration.submit'|trans }}" />

                        {{ form_end(form) }}

                        <div class="mt10">
                            <a href="/register" style="color: white;">
                                Already have an account? Sign in.
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock fos_user_content %}