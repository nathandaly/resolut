{% extends '@FOSUser/layout.html.twig' %}

{% block fos_user_content %}
    <section class="login-page pt170">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-12 col-xs-12">
                    <h3>Sign in</h3>
                    {% trans_default_domain 'FOSUserBundle' %}

                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}

                        <div class="input-wrap input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input class="general_input italic" style="text-transform: none;" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" placeholder="{{ 'security.login.username'|trans }}" />
                        </div>

                        <div class="input-wrap input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input class="general_input italic" style="display: table-cell;" type="password" id="password" name="_password" required="required" autocomplete="current-password" placeholder="{{ 'security.login.password'|trans }}" />
                        </div>

                        <div class="checkbox float-left">
                            <label>
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans }}
                            </label>
                        </div>

                        <div class="mt10 float-right">
                            <a href="/resetting/request" style="color: white;">
                                Trouble signing in?
                            </a>
                        </div>

                        <input class="btn btn-block gradient mt30 color-white color-white plr50 ptb19" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    </form>
                    <div class="mt10">
                        <a href="/register" style="color: white;">
                            Don't have an account? Click here.
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock fos_user_content %}